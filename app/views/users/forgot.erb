<div id="user-functions">
  <% form_for :user do |f| -%>  
    <p>  
      Reset Password Request  
    </p>  
    <p>  
      <label for="email">Email</label><br />  
      <%= f.text_field :email %>  
    </p>  
    <p>  
      <%= submit_tag 'Submit' %>  
      <%= submit_tag 'Cancel', :name => 'cancel' %>  
    </p>  
  <% end -%>
</div>
